<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    @if (IsSectionDefined("Head"))
    {
        @RenderSection("Head");
    }
</head>
<body>
    <div id="page">
        <div id="header">
            <div id="logindisplay">
                @if (Request.IsAuthenticated)
                {
                    @Html.Partial("_LogOnPartial")
                }
            </div>
            <h1><a href="/"><img class="image" id="main_logo" height="40" width="206" src="/Content/themes/base/images/main_logo_alt1.png"/></a></h1>            
            <div id="menucontainer">
                <ul id="menu">
                    @Html.MenuItem("Envelopes", "Index", "Envelope")
                    @Html.MenuItem("Transactions", "Index", "Transactions")
                    @Html.MenuItem("Users", "Index", "User")
                </ul>
            </div>
            
        </div>
        <div class="clear">&nbsp;</div>
        <div id="main">
            @RenderBody()
        </div>
<!--        <div id="footer">
        </div>-->
    </div>
</body>
</html>