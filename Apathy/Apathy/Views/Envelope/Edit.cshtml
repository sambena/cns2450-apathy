@model Apathy.Models.Envelope

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Envelope</legend>

        @Html.HiddenFor(model => model.EnvelopeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.BudgetID, "Budget")
        </div>
        <div class="editor-field">
            @Html.DropDownList("BudgetID", String.Empty)
            @Html.ValidationMessageFor(model => model.BudgetID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartingBalance)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartingBalance)
            @Html.ValidationMessageFor(model => model.StartingBalance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CurrentBalance)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CurrentBalance)
            @Html.ValidationMessageFor(model => model.CurrentBalance)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
